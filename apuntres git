
//configurar usuario
git config --global user.name 'nombre'
git config --global user.mail 'correo'

//inicalizar git en una carpeta
git init

//cambiar nombre del branch 
git branch -m 'nombre'

//ver documentos
git status

//agregar documentos para guardar 
git add 'nombre'

//guardar el commint
git commit -m 'nombre del commint'


//git checkout
git checkout 'nombre del documentos'


//git ignore 

/crear fichero ignore

touch .gitignore


//git tree

git config --global alias.tree "log --graph --decorate --all --oneline"

//mover entre las version con el git checkout

git checkout 'numero de la version a la que se quere mover' //este codigo se peude ver en el tree


//comando para conectar con git, aunque este comando se da en github al momento de crear el repositorio

git remote add origin https://github.com/rmMarioAlberto/git_user.git //este el nombre del usuario y el nombre del repositorio de github

//comando para subir las partes del proyecto ya creadas

git push origin main